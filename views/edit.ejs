<% layout("/layouts/boilerplate") %>

<h2 class="mb-4 text-center">Edit Donation</h2>

<div class="row justify-content-center">
  <div class="col-md-6">
    <form action="/donations/<%= donation._id %>?_method=PUT" method="POST">
      <div class="mb-3">
        <label for="food_name" class="form-label">Food Name</label>
        <input type="text" class="form-control" id="food_name" name="food_name" value="<%= donation.food_name %>" required>
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea class="form-control" id="description" name="description" rows="3" required><%= donation.description %></textarea>
      </div>

      <div class="mb-3">
        <label for="quantity" class="form-label">Quantity</label>
        <input type="text" class="form-control" id="quantity" name="quantity" value="<%= donation.quantity %>" required>
      </div>

      <div class="mb-3">
        <label for="address" class="form-label">Address</label>
        <input type="text" class="form-control" id="address" name="address" value="<%= donation.address %>" required>
      </div>

      <div class="mb-3">
        <label for="image_url" class="form-label">Image URL</label>
        <input type="text" class="form-control" id="image_url" name="image_url" value="<%= donation.image_url %>">
      </div>

      <button type="submit" class="btn btn-primary w-100 mb-3">Update Donation</button>
    </form>
  </div>
</div>
