<% layout("/layouts/boilerplate") %>

<style>
    body {
        background: #fdfdfd;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .login-wrapper {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        padding: 2rem;
        background: linear-gradient(135deg, #f9f9f9, #ffffff);
    }

    .login-card {
        display: flex;
        flex-direction: row;
        max-width: 900px;
        width: 100%;
        background: #ffffff;
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
        animation: fadeIn 0.5s ease-in-out;
    }

    .login-image {
        flex: 1;
        background-color: #3D405B;
        color: #fff;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 2rem;
        text-align: center;
    }

    .login-image img {
        width: 100%;
        max-width: 350px;
        height: auto;
        margin-bottom: 1.5rem;
        border-radius: 12px;
    }

    .login-image h2 {
        font-size: 2rem;
        margin-bottom: 0.8rem;
    }

    .login-image p {
        color: #F4F1DE;
        font-size: 1rem;
        line-height: 1.4;
    }

    .login-form-area {
        flex: 1;
        padding: 3rem 2.5rem;
        background-color: #fdfcf7;
    }

    .login-title {
        text-align: center;
        color: #3D405B;
        font-size: 1.8rem;
        font-weight: 700;
        margin-bottom: 2rem;
    }

    .form-label {
        color: #3D405B;
        font-weight: 600;
        margin-bottom: 0.3rem;
        display: inline-block;
    }

    .form-control {
        width: 100%;
        padding: 0.75rem 1rem;
        font-size: 1rem;
        border-radius: 10px;
        border: 1px solid #ccc;
        margin-bottom: 1.5rem;
        transition: 0.3s ease-in-out;
    }

    .form-control:focus {
        border-color: #3D405B;
        outline: none;
        box-shadow: 0 0 6px rgba(61, 64, 91, 0.25);
    }

    .btn-custom {
        width: 100%;
        padding: 0.85rem;
        background-color: #3D405B;
        color: white;
        border: none;
        border-radius: 10px;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        transition: 0.3s ease;
    }

    .btn-custom:hover {
        background-color: #2c2e47;
        transform: scale(1.02);
    }

    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @media (max-width: 768px) {
        .login-card {
            flex-direction: column;
        }

        .login-image,
        .login-form-area {
            padding: 2rem;
        }

        .login-image img {
            max-width: 250px;
        }
    }
</style>

<div class="login-wrapper">
    <div class="login-card">
        <div class="login-image">
            <img src="https://cdn.pixabay.com/photo/2014/11/05/15/57/new-years-eve-518032_640.jpg" alt="Login Illustration">
            <h2>Welcome Back!</h2>
            <p>Login to NourishNet and join a community where sharing food feels like sharing joy.</p>
        </div>
        <div class="login-form-area">
            <h3 class="login-title">Login to Your Account</h3>
            <form action="/login" method="POST" novalidate>
                <div>
                    <label for="username" class="form-label">üë§ Username</label>
                    <input name="username" id="username" type="text" class="form-control" required>
                </div>
                <div>
                    <label for="password" class="form-label">üîê Password</label>
                    <input name="password" id="password" type="password" class="form-control" required>
                </div>
                <button class="btn btn-custom">Login</button>
            </form>
        </div>
    </div>
</div>
