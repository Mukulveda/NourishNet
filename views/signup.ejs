<% layout("/layouts/boilerplate") %>

<style>
    body {
        background: linear-gradient(135deg, #F9F9F9, #fff);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .signup-wrapper {
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 2rem;
        background-image: url("https://www.transparenttextures.com/patterns/paper-fibers.png");
    }

    .signup-card {
        display: flex;
        flex-wrap: wrap;
        background: #ffffff;
        border-radius: 20px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        max-width: 1000px;
        overflow: hidden;
        width: 100%;
        animation: fadeIn 0.6s ease-in-out;
    }

    .signup-image {
        background-color: #3D405B;
        color: #fff;
        flex: 1 1 50%;
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
        align-items: center;
        text-align: center;
        padding: 2rem;
    }

    .signup-image img {
        width: 430px !important;
        height: 250px;
        object-fit: cover;
        margin-bottom: 1.5rem;
    }

    .signup-image h2 {
        font-size: 2.2rem;
        font-weight: bold;
        margin-bottom: 1rem;
    }

    .signup-image p {
        font-size: 1.1rem;
        line-height: 1.5;
        color: #F4F1DE;
    }

    .signup-form-area {
        flex: 1 1 50%;
        padding: 3rem;
        background-color: #fdfcf7;
    }

    .signup-title {
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 2rem;
        color: #3D405B;
        text-align: center;
    }

    .form-label {
        color: #3D405B;
        font-weight: 600;
        display: block;
        margin-bottom: 0.5rem;
    }

    .form-control {
        width: 100%;
        padding: 0.75rem 1rem;
        border: 1px solid #ccc;
        border-radius: 12px;
        font-size: 1rem;
        margin-bottom: 1.2rem;
        transition: all 0.3s ease-in-out;
    }

    .form-control:focus {
        border-color: #3D405B;
        outline: none;
        box-shadow: 0 0 5px rgba(61, 64, 91, 0.3);
    }

    .btn-custom {
        background-color: #3D405B;
        color: #fff;
        border: none;
        width: 100%;
        padding: 0.9rem;
        font-size: 1.1rem;
        border-radius: 12px;
        cursor: pointer;
        transition: 0.3s ease-in-out;
    }

    .btn-custom:hover {
        background-color: #2d2f47;
        transform: scale(1.03);
    }

    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @media (max-width: 768px) {
        .signup-card {
            flex-direction: column;
        }

        .signup-image,
        .signup-form-area {
            flex: 1 1 100%;
            padding: 2rem;
        }

        .signup-image img {
            height: 200px;
        }
    }
</style>

<div class="signup-wrapper">
    <div class="signup-card">
        <div class="signup-image">
            <img src="https://www.shutterstock.com/image-photo/fried-salmon-steak-cooked-green-600nw-2489026949.jpg" alt="Signup Illustration">
            <h2>Welcome to NourishNet</h2>
            <p>Share food, spread kindness. Be a part of a community that nourishes hearts and homes.</p>
        </div>
        <div class="signup-form-area">
            <h3 class="signup-title">Create Your Account</h3>
            <form action="/signup" method="POST" class="needs-validation" novalidate>
                <div>
                    <label for="username" class="form-label">üë§ Username</label>
                    <input name="username" id="username" type="text" class="form-control" required>
                </div>
                <div>
                    <label for="email" class="form-label">üìß Email</label>
                    <input name="email" id="email" type="email" class="form-control" required>
                </div>
                <div>
                    <label for="password" class="form-label">üîê Password</label>
                    <input name="password" id="password" type="password" class="form-control" required>
                </div>
                <button class="btn btn-custom">Sign Up</button>
            </form>
        </div>
    </div>
</div>
