<% layout("/layouts/boilerplate") %>

<!-- Hero Section with Background Video -->
<div class="hero-video-container mt-1">
  <video autoplay muted loop playsinline>
    <source src="https://b.zmtcdn.com/data/file_assets/2627bbed9d6c068e50d2aadcca11ddbb1743095925.mp4" type="video/mp4" />
    Your browser does not support the video tag.
  </video>
  <div class="hero-video-content">
    <h1>India's No.1 Food Sharing Platform</h1>
    <p>Join us in connecting communities through shared food. NourishNet makes it easy to offer surplus meals and bring joy to those in need.</p>
    <a href="<%= currUser ? '/donations' : '/signup' %>" class="btn btn-warning btn-lg">Get Started</a>
  </div>
</div>

<!-- How It Works Section -->
<div class="container how-it-works">
  <h2 class="mb-5">How It Works</h2>
  <div class="row g-4">
    <div class="col-12 col-md-4" data-aos="zoom-in">
      <div class="icon"><i class="bi bi-person-plus"></i></div>
      <h4 class="mt-2">Sign Up</h4>
      <p>Create an account to get started.</p>
    </div>
    <div class="col-12 col-md-4" data-aos="zoom-in" data-aos-delay="200">
      <div class="icon"><i class="bi bi-egg-fried"></i></div>
      <h4 class="mt-2">Offer Meals</h4>
      <p>List your extra food to share with others.</p>
    </div>
    <div class="col-12 col-md-4" data-aos="zoom-in" data-aos-delay="400">
      <div class="icon"><i class="bi bi-heart-fill"></i></div>
      <h4 class="mt-2">Share the Joy</h4>
      <p>Help reduce hunger and foster connections.</p>
    </div>
  </div>
</div>

<!-- Testimonials -->
<div class="container testimonials">
  <h2 class="mb-5">What Our Users Say</h2>
  <div class="row g-4">
    <div class="col-md-4" data-aos="fade-up">
      <div class="testimonial-card">
        <p>"NourishNet helped me connect with people who truly needed the extra food I had. Itâ€™s a beautiful initiative!"</p>
        <strong>- Asha, Volunteer</strong>
      </div>
    </div>
    <div class="col-md-4" data-aos="fade-up" data-aos-delay="200">
      <div class="testimonial-card">
        <p>"As a student, this platform helped me reduce waste and help someone in need. Highly recommend it!"</p>
        <strong>- Ramesh, Student</strong>
      </div>
    </div>
    <div class="col-md-4" data-aos="fade-up" data-aos-delay="400">
      <div class="testimonial-card">
        <p>"Simple to use and a great cause. The experience of giving was priceless."</p>
        <strong>- Priya, Homemaker</strong>
      </div>
    </div>
  </div>
</div>

<!-- Call to Action -->
<div class="container-fluid cta-section mt-5 mb-2" data-aos="zoom-in">
  <div class="row justify-content-center">
    <div class="col-md-8 text-center">
      <h2>Start Making a Difference Today</h2>
      <p class="lead">Whether you have a little or a lot, your surplus can change lives. Join NourishNet and become a food hero.</p>
      <a href="<%= currUser ? '/donations' : '/signup' %>" class="btn btn-success btn-lg mt-3">Join Now</a>
    </div>
  </div>
</div>

<!-- AOS Script -->
<script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
<script>
  AOS.init({
    once: true,
    duration: 1000,
  });
</script>

