<% layout("/layouts/boilerplate") %>
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>NourishNet - Sharing Meals, Spreading Happiness</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <style>
    /* body{
        background-color: white !important;
    } */
    .hero-section {
      background-color: #d2fff2;
      padding: 60px 20px;
      width: 100%;
      margin: 0;
      overflow: hidden;
    }

    .hero-img {
      width: 350px;
    }

    @media (max-width: 991.98px) {
      .hero-img {
        width: 100%;
        max-width: 100%;
      }
    }

    .shift-right {
      position: relative;
    }

    @media (min-width: 768px) {
      .shift-right {
        left: 100px;
      }
    }

    .how-it-works {
      padding: 50px 20px;
      text-align: center;
    }

    .icon {
      font-size: 40px;
      color: #ff7f50;
    }
  </style>
</head>
<body>

  <!-- Hero Section -->
  <div class="container-fluid hero-section mt-2">
    <div class="row align-items-center flex-column-reverse flex-md-row text-center text-md-start px-3 px-md-5">

      <!-- Text Block -->
      <div class="col-md-6 mt-4 mt-md-0 shift-right">
        <h1 class="fw-bold">Sharing Meals, Spreading Happiness</h1>
        <p class="lead">Join us in connecting communities through shared food. NourishNet makes it easy to offer surplus meals and bring joy to those in need.</p>
        <a href="<%= currUser ? '/donations' : '/signup' %>" class="btn btn-warning btn-lg mt-3">Get Started</a>
      </div>

      <!-- Image -->
      <div class="col-md-6 shift-right">
        <img src="/image/Home img.png" alt="Food Sharing" class="img-fluid hero-img">
      </div>
    </div>
  </div>

  <!-- How It Works Section -->
  <div class="container how-it-works">
    <h2 class="mb-5">How It Works</h2>
    <div class="row g-4">
      <div class="col-12 col-md-4">
        <div class="icon">üìù</div>
        <h4 class="mt-2">Sign Up</h4>
        <p>Create an account to get started.</p>
      </div>
      <div class="col-12 col-md-4">
        <div class="icon">üçΩÔ∏è</div>
        <h4 class="mt-2">Offer Meals</h4>
        <p>List your extra food to share with others.</p>
      </div>
      <div class="col-12 col-md-4">
        <div class="icon">‚ù§Ô∏è</div>
        <h4 class="mt-2">Share the Joy</h4>
        <p>Help reduce hunger and foster connections.</p>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
